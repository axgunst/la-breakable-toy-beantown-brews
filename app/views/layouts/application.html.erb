<!DOCTYPE html>
<html>
<head>
  <title>BeantownBrews</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="top-bar">
    <%=link_to image_tag("beantown-brews.png", alt: "Main-logo"), root_path, :class => "Main-logo" %>
    <%=link_to "TAPROOMS", taprooms_path, :class => "taproom-nav-bar-link" %>
    
    <section class="top-bar-section">
      <%# <ul class="right"> %>
        <%- if current_user -%>
          <p><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
        <%- else -%>
          <p><%= link_to 'Sign Up', new_user_registration_path %></p>
          <p><%= link_to 'Sign In', new_user_session_path %></p>
        <%- end -%>
      <%# </ul> %>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  
  <%- if Rails.env.development? || Rails.env.test? -%> 
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>
  
  <%= yield :extra_footer %>
</body>
</html>


